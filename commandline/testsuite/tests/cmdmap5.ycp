{

    include "testsuite.ycp";
    import "./../src/TypeRepository.ycp";
    import "./../src/CommandLine.ycp";

    // mappings must refer to specified actions
    // mappings must refer to specified options
    TEST(``(CommandLine::Init(
	$[
	    "id": "testsuite",
	    "help": "help is there",
	    "options": $[
		"okregexoption" : $[
		    "help": "some help",
		    "type": "regex",
		    "typespec": "^[a]+$"
		]
	    ],
	    "actions": $[
		"okaction": $[
		    "help": "blabla"
		],
		"okaction2": $[
		    "help": "blabla"
		],
	    ],
	    "mappings": $[
		"unknownaction": [ "unknownoption" ],
		"wrongaction" : [ "okregexoption" ],
		"okaction" : ["wrongoption" ],
		"okaction2" : ["okregexoption"]
	    ]
	]
	,[]) ),[],nil);
    TEST(``(CommandLine::Done()),[],nil);
    TEST(``(CommandLine::Aborted()),[],nil);

/* EOF */
}

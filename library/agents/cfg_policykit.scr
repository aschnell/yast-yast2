// use the INI-agent for reading/writing

.etc.policykit

`ag_ini(
    `IniAgent( ["/etc/PolicyKit/privilege.d/*.privilege"] , $[
	"options" : [ "no_nested_sections", "line_can_continue", "comments_last" ],
	"comments": [
	    "^[ \t]*$",		// empty line
	    "^[ \t]*#.*$",	// comment char
	],
	"sections" : [
	    $[
		"begin" : [ "^[ \t]*\\[[ \t]*(.*[^ \t])[ \t]*\\][ \t]*", "[%s]" ],
	    ]
	],
	"params" : [
	    $[
		"match" : [ "^[ \t]*([^=]*[^ \t=])[ \t]*=[ \t]*(.*[^ \t]|)[ \t]*$" , "%s=%s"],
	    ]
	]
    ]
  )
)


{
    import "Wizard";


    Wizard::CreateDialog();

    term   contents  = `Label( "Wizard contents" );
    string headline  = "Trivial Wizard Example";
    string help_text = "<p>Help text</p>";

    Wizard::SetContents( headline, contents, help_text,
			 false,		// have back button
			 true );	// have next button

    Wizard::UserInput();
    UI::CloseDialog();
}


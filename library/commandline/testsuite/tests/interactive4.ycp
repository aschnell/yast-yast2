{

    include "testsuite.ycp";
    include "./tests/testsuitedata.yh";

    import "./../src/CommandLine.ycp";

    // startup
    TEST(``(CommandLine::Init( cmdline ,["interactive"]) ),[],nil);
    TEST(``(CommandLine::StartGUI()), [], nil );
    TEST(``(CommandLine::Done()), [], nil );

    // do help
    TEST(``(CommandLine::Command() ), [$[ "dev":$[ "tty": "add device=eth0" ] ] ],nil);
    TEST(``(CommandLine::Done()), [], nil );
    TEST(``(CommandLine::Aborted()), [], nil );

    // quit
    TEST(``(CommandLine::Command() ), [$[ "dev":$[ "tty": "quit" ] ] ],nil);
    TEST(``(CommandLine::Done()), [], nil );
    TEST(``(CommandLine::Aborted()), [], nil );

/* EOF */
}
